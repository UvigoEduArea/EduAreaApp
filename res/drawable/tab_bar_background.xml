<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@color/black"/>
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false">
        <layer-list>
            <item android:top="-5dp" android:left="-5dp" android:right="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/action_bar" android:width="5dp"/>
                    <solid android:color="@color/black"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/black"/>
                    <solid android:color="@color/tab_highlight"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true" android:state_pressed="true">
        <layer-list>
            <item android:top="-5dp" android:left="-5dp" android:right="-5dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/action_bar" android:width="5dp"/>
                    <solid android:color="@color/tab_highlight"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>