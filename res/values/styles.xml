<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="android:actionBarDivider">@null</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="actionBarDivider">@null</item>
    </style>

    <!-- ActionBar styles -->
  
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubtitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/MyActionBarSubtitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="MyActionBarSubtitleText" parent="@style/MyActionBarTitleText">
        <item name="android:textColor">#EEEEEE</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/tab_bar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/tab_bar_background</item>
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#FFFFFF</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
